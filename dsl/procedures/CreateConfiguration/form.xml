<editor>
  <formElement>
    <type>entry</type>
    <property>config</property>
    <required>1</required>
    <documentation>The name for the created configuration</documentation>
    <label>Configuration Name</label>
  </formElement>
  <formElement>
    <type>entry</type>
    <property>desc</property>
    <required>0</required>
    <documentation>Configuration description</documentation>
    <label>Description</label>
  </formElement>
  <formElement>
    <type>entry</type>
    <property>cliPath</property>
    <required>1</required>
    <documentation>Path to asadmin cli, e.g. /home/glassfish/bin/asadmin</documentation>
    <label>CLI path</label>
    <value>asadmin</value>
  </formElement>
  <formElement>
    <type>credential</type>
    <property>credential</property>
    <required>1</required>
    <label>Credential</label>
