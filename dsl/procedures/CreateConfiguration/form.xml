    <passwordLabel>Password</passwordLabel>
    <attachedAsParameterToStep>createConfiguration</attachedAsParameterToStep>
  </formElement>
  <formElement>
    <type>select</type>
    <property>debugLevel</property>
    <required>0</required>
    <label>Debug Level</label>
    <option>
      <name>Info</name>
      <value>0</value>
    </option>
    <option>
      <name>Debug</name>
      <value>1</value>
    </option>
    <option>
      <name>Trace</name>
      <value>2</value>
